<?xml version="1.0" encoding="UTF-8"?>
<knowledge>
    <title>Reduce Sugar Intake</title>
    <description></description>
    <goal name="price">
        <description>Price</description>
        <answer value="cheap">Cheap</answer>
        <answer value="average">Average/Normal</answer>
        <answer value="expensive">Expensive</answer>
    </goal>
    <goal name="diet">
        <description>Diet</description>
        <answer value="lt_2000">Less than 2000</answer>
        <answer value="2000">Around 2000</answer>
        <answer value="2500">Around 2500</answer>
        <answer value="gt_2500">More than 2500</answer>
    </goal>
    <goal name="company">
        <description>Company</description>
        <answer value="coca-cola">Coca Cola</answer>
        <answer value="pepsi-cola">Pepsi Cola</answer>
    </goal>
    <goal name="artificial_sweeterners">
        <description>Artificial Sweeteners</description>
        <answer value="yes">Yes</answer>
        <answer value="no">No</answer>
    </goal>
    <goal name="carbonated">
        <description>Carbonated</description>
        <answer value="yes">Yes</answer>
        <answer value="no">No</answer>
    </goal>
    <goal name="has_caffeine">
        <description>Caffeine</description>
        <answer value="yes">Yes</answer>
        <answer value="no">No</answer>
    </goal>
    <goal name="energy_drink">
        <description>Energy drink</description>
        <answer value="yes">Yes</answer>
        <answer value="no">No</answer>
    </goal>
    <goal name="package_size">
        <description>Package size</description>
        <answer value="small">Small</answer>
        <answer value="large">Large</answer>
    </goal>
    <goal name="sugar_free">
        <description>Sugar free</description>
        <answer value="yes">Yes</answer>
        <answer value="no">No</answer>
    </goal>
    <rule>
        <description>Brand Loyalty To company</description>
        <if>
            <and>
                <fact name="has-brand-loyalty">yes</fact>
                <fact name="loyat_to">coca-cola</fact>
            </and>
        </if>
        <then>
            <fact name="company">coca-cola</fact>
        </then>
    </rule>
    <rule>
        <description>Brand Loyalty To company</description>
        <if>
            <and>
                <fact name="has-brand-loyalty">yes</fact>
                <fact name="loyat_to">pepsi-cola</fact>
            </and>
        </if>
        <then>
            <fact name="company">pepsi-cola</fact>
        </then>
    </rule>
    <rule>
        <description>Artificial sweeteners when sugar free</description>
        <if>
            <and>
                <fact name="artificial_sweeteners_okay">no</fact>
                <fact name="sugar_free">yes</fact>
            </and>
        </if>
        <then>
            <fact name="artificial_sweeterners">no</fact>
        </then>
    </rule>
    <rule>
        <description>Caffeine</description>
        <if>
            <and>
                <fact name="energy_drink">yes</fact>
            </and>
        </if>
        <then>
            <fact name="has_caffeine">yes</fact>
        </then>
    </rule>
    <rule>
        <description>Diversity:no</description>
        <if>
            <or>
                <fact name="diversity">no</fact>
                <fact name="weekly_usage">heavy</fact>
            </or>
        </if>
        <then>
            <fact name="package_size">large</fact>
        </then>
    </rule>
    <rule>
        <description>Diversity:yes</description>
        <if>
            <and>
                <or>
                    <fact name="diversity">yes</fact>
                    <fact name="weekly_usage">light</fact>
                </or>
                <fact name="sugar_free">yes</fact>
            </and>
        </if>
        <then>
            <fact name="package_size">small</fact>
        </then>
    </rule>

    <question>
        <description>How much money are you willing to spend per day on soft drinks?</description>
        <option>
            <description>Less than EUR 2.00</description>
            <then>
                <fact name="price">cheap</fact>
            </then>
        </option>
        <option>
            <description>Between EUR 2.00 and EUR 5.00</description>
            <then>
                <fact name="price">average</fact>
            </then>
        </option>
        <option>
            <description>More than EUR 5.00</description>
            <then>
                <fact name="price">expensive</fact>
            </then>
        </option>
    </question>
    <question>
        <description>Has Brand Loyalty?</description>
        <option>
            <description>Yes</description>
            <then>
                <fact name="has-brand-loyalty">yes</fact>
            </then>
        </option>
        <option>
            <description>No</description>
            <then>
                <fact name="has-brand-loyalty">no</fact>
            </then>
        </option>
    </question>
    <question>
        <description>Brand Loyalty To?</description>
        <option>
            <description>Coca cola</description>
            <then>
                <fact name="loyat_to">coca-cola</fact>
            </then>
        </option>
        <option>
            <description>Pepsi cola</description>
            <then>
                <fact name="loyat_to">pepsi-cola</fact>
            </then>
        </option>
        <option>
            <description>Other</description>
            <then>
                <fact name="loyat_to">undefined</fact>
            </then>
        </option>
    </question>
    <question>
        <description>Artificial sweeteners?</description>
        <option>
            <description>Can contain</description>
            <then>
                <fact name="artificial_sweeteners_okay">yes</fact>
            </then>
        </option>
        <option>
            <description>Should not contain</description>
            <then>
                <fact name="artificial_sweeteners_okay">no</fact>
            </then>
        </option>
    </question>
    <question>
        <description>Sugar free?</description>
        <option>
            <description>Sugar free</description>
            <then>
                <fact name="sugar_free">yes</fact>
            </then>
        </option>
        <option>
            <description>Sugar</description>
            <then>
                <fact name="sugar_free">no</fact>
            </then>
        </option>
        <option>
            <description>I do not care.</description>
            <then>
                <fact name="sugar_free">undefined</fact>
            </then>
        </option>
    </question>
    <question>
        <description>Carbonated?</description>
        <option>
            <description>Carbonated.</description>
            <then>
                <fact name="carbonated">yes</fact>
            </then>
        </option>
        <option>
            <description>Flat.</description>
            <then>
                <fact name="carbonated">no</fact>
            </then>
        </option>
        <option>
            <description>I do not care.</description>
            <then>
                <fact name="carbonated">undefined</fact>
            </then>
        </option>
    </question>
    <question>
        <description>Energy Drink?</description>
        <option>
            <description>Energy.</description>
            <then>
                <fact name="energy_drink">yes</fact>
            </then>
        </option>
        <option>
            <description>Not an energy drink.</description>
            <then>
                <fact name="energy_drink">no</fact>
            </then>
        </option>
        <option>
            <description>I do not care.</description>
            <then>
                <fact name="energy_drink">undefined</fact>
            </then>
        </option>
    </question>
    <question>
        <description>Caffeine?</description>
        <option>
            <description>Caffeine.</description>
            <then>
                <fact name="has_caffeine">yes</fact>
            </then>
        </option>
        <option>
            <description>Should not have caffeine.</description>
            <then>
                <fact name="has_caffeine">no</fact>
            </then>
        </option>
        <option>
            <description>I do not care.</description>
            <then>
                <fact name="has_caffeine">undefined</fact>
            </then>
        </option>
    </question>
    <question>
        <description>Prefer single use quantity or long-term use quantity</description>
        <option>
            <description>Single use.</description>
            <then>
                <fact name="package_size">small</fact>
            </then>
        </option>
        <option>
            <description>Long-term use.</description>
            <then>
                <fact name="package_size">large</fact>
            </then>
        </option>
        <option>
            <description>I do not care.</description>
            <then>
                <fact name="package_size">undefined</fact>
            </then>
        </option>
    </question>
    <question>
        <description>Different drink every day?</description>
        <option>
            <description>Different</description>
            <then>
                <fact name="diversity">yes</fact>
            </then>
        </option>
        <option>
            <description>Same drink</description>
            <then>
                <fact name="diversity">no</fact>
            </then>
        </option>
        <option>
            <description>No preference</description>
            <then>
                <fact name="diversity">undefined</fact>
            </then>
        </option>
    </question>
    <question>
        <description>How much soft drinks are consumed per week?</description>
        <option>
            <description>Less than 2.5L per week</description>
            <then>
                <fact name="weekly_usage">light</fact>
            </then>
        </option>
        <option>
            <description>Between 2.5L and 7L per week</description>
            <then>
                <fact name="weekly_usage">moderate</fact>
            </then>
        </option>
        <option>
            <description>More than 7L per week</description>
            <then>
                <fact name="weekly_usage">heavy</fact>
            </then>
        </option>
    </question>
    <question>
        <description>Are you on a diet?</description>
        <option>
            <description>Less than 2000 kCal</description>
            <then>
                <fact name="diet">lt_2000</fact>
            </then>
        </option>
        <option>
            <description>Around 2000 kCal</description>
            <then>
                <fact name="diet">2000</fact>
            </then>
        </option>
        <option>
            <description>Around 2500 kCal</description>
            <then>
                <fact name="diet">2500</fact>
            </then>
        </option>
        <option>
            <description>More than 2500 kCal</description>
            <then>
                <fact name="diet">gt_2500</fact>
            </then>
        </option>
        <option>
            <description>I do not follow any diet</description>
            <then>
                <fact name="diet">undefined</fact>
            </then>
        </option>
    </question>
</knowledge>