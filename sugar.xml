<?xml version="1.0" encoding="UTF-8"?>
<knowledge>
    <title>Reduce Sugar Intake</title>
    <description>
        Expert system which aims to provide a healthy soft drink alternative by offering drinks
        with a low-sugar content.
    </description>

<!-- GOALS GOALS GOALS GOALS GOALS GOALS GOALS GOALS GOALS GOALS GOALS GOALS GOALS GOALS GOALS GOALS -->

    <goal name="price">
        <description>Amount of money spent on the single most expensive drink per day</description>
        <answer value="cheap">Cheap</answer>
        <answer value="average">Average/Normal</answer>
        <answer value="expensive">Expensive</answer>
    </goal>
    <goal name="diet">
        <description>Calorie intake per day</description>
        <answer value="lt_2000">Less than 2000 kCal</answer>
        <answer value="2000">Around 2000 kCal</answer>
        <answer value="2500">Around 2500 kCal</answer>
        <answer value="gt_2500">More than 2500 kCal</answer>
    </goal>
    <goal name="company">
        <description>Major soft drink manufacturers</description>
        <answer value="coca-cola">Coca Cola</answer>
        <answer value="pepsi-cola">Pepsi Cola</answer>
    </goal>
    <goal name="artificial_sweeterners">
        <description>Determines if the customer consents to consuming artificial sweeteners</description>
        <answer value="yes">Yes</answer>
        <answer value="no">No</answer>
    </goal>
    <goal name="carbonated">
        <description>Determines if the customer consumes carbonated drinks</description>
        <answer value="yes">Yes</answer>
        <answer value="no">No</answer>
    </goal>
    <goal name="has_caffeine">
        <description>Determines if the customer consumes drinks containing caffeine</description>
        <answer value="yes">Yes</answer>
        <answer value="no">No</answer>
    </goal>
    <goal name="energy_drink">
        <description>Determines if the customer consumes energy drinks</description>
        <answer value="yes">Yes</answer>
        <answer value="no">No</answer>
    </goal>
    <goal name="package_size">
        <description>Determines if preferred package size</description>
        <answer value="small">Small</answer>
        <answer value="large">Large</answer>
    </goal>
    <goal name="sugar_free">
        <description>Determines if the customer would like to consume sugar free drinks</description>
        <answer value="yes">Yes</answer>
        <answer value="no">No</answer>
    </goal>

<!-- RULES RULES RULES RULES RULES RULES RULES RULES RULES RULES RULES RULES RULES RULES RULES RULES RULES -->

    <rule>
        <description>
            If the customer has a given brand loyalty and the company he/she
            is loyal to is the Coca-Cola Co. determine that customer
            prefers all products from said company.
        </description>
        <if>
            <and>
                <fact name="has-brand-loyalty">yes</fact>
                <fact name="loyat_to">coca-cola</fact>
            </and>
        </if>
        <then>
            <fact name="company">coca-cola</fact>
        </then>
    </rule>

    <rule>
        <description>
            If the customer has a given brand loyalty and the company he/she
            is loyal to is PepsiCo. determine that customer
            prefers all products from said company.
        </description>
        <if>
            <and>
                <fact name="has-brand-loyalty">yes</fact>
                <fact name="loyat_to">pepsi-cola</fact>
            </and>
        </if>
        <then>
            <fact name="company">pepsi-cola</fact>
        </then>
    </rule>

    <rule>
        <description>
            If the customer would like to consume sugar-free products
            but does not approve of artificial sweeteners suggested products
            must not contain artificial sweeteners.
        </description>
        <if>
            <and>
                <fact name="artificial_sweeteners_okay">no</fact>
                <fact name="sugar_free">yes</fact>
            </and>
        </if>
        <then>
            <fact name="artificial_sweeterners">no</fact>
        </then>
    </rule>

    <rule>
        <description>
            If the customer consumes energy drinks it can be inferred
            that he/she approves of drinks which contain caffeine
        </description>
        <if>
            <and>
                <fact name="energy_drink">yes</fact>
            </and>
        </if>
        <then>
            <fact name="has_caffeine">yes</fact>
        </then>
    </rule>

    <rule>
        <description>
            If the customer does not consume a variety of different drinks
            or consumes large amounts of a beverage it can be inferred 
            that buying large containers of said beverage is preferred.
        </description>
        <if>
            <or>
                <fact name="diversity">no</fact>
                <fact name="weekly_usage">heavy</fact>
            </or>
        </if>
        <then>
            <fact name="package_size">large</fact>
        </then>
    </rule>

    <rule>
        <description>
            If the customer does consume a variety of different drinks
            or consumes small amounts of a beverage and furthermore would
            like to consume sugar-free products it can be inferred that
            the customer should buy small containers of a given beverage due
            to its shorter shelf-life.
        </description>
        <if>
            <and>
                <or>
                    <fact name="diversity">yes</fact>
                    <fact name="weekly_usage">light</fact>
                </or>
                <fact name="sugar_free">yes</fact>
            </and>
        </if>
        <then>
            <fact name="package_size">small</fact>
        </then>
    </rule>

<!-- QUESTIONS QUESTIONS QUESTIONS QUESTIONS QUESTIONS QUESTIONS QUESTIONS QUESTIONS QUESTIONS QUESTIONS QUESTIONS -->

    <question>
        <description>How much money are you willing to spend per day on the single most expensive product you buy?</description>
        <option>
            <description>Less than EUR 2.00</description>
            <then>
                <fact name="price">cheap</fact>
            </then>
        </option>
        <option>
            <description>Between EUR 2.00 and EUR 5.00</description>
            <then>
                <fact name="price">average</fact>
            </then>
        </option>
        <option>
            <description>More than EUR 5.00</description>
            <then>
                <fact name="price">expensive</fact>
            </then>
        </option>
    </question>

    <question>
        <description>
            Are you extremely loyal to a given brand i.e. will not consume a 
            given product if produced by a different company? For example, coca-cola and pepsi.</description>
        <option>
            <description>Yes</description>
            <then>
                <fact name="has-brand-loyalty">yes</fact>
            </then>
        </option>
        <option>
            <description>No</description>
            <then>
                <fact name="has-brand-loyalty">no</fact>
            </then>
        </option>
    </question>

    <question>
        <description>Which of the major manufacturers are you loyal to?</description>
        <option>
            <description>The Coca-Cola Company</description>
            <then>
                <fact name="loyat_to">coca-cola</fact>
            </then>
        </option>
        <option>
            <description>PepsiCo, Inc.</description>
            <then>
                <fact name="loyat_to">pepsi-cola</fact>
            </then>
        </option>
        <option>
            <description>Other</description>
            <then>
                <fact name="loyat_to">undefined</fact>
            </then>
        </option>
    </question>

    <question>
        <description>Are you willing to consume beverages which contain artificial sweeteners?</description>
        <option>
            <description>Yes, recommended beverages can contain caffeine</description>
            <then>
                <fact name="artificial_sweeteners_okay">yes</fact>
            </then>
        </option>
        <option>
            <description>No, recommended beverages should NOT contain caffeine</description>
            <then>
                <fact name="artificial_sweeteners_okay">no</fact>
            </then>
        </option>
    </question>

    <question>
        <description>Are you willing to consume beverages which contain NO sugar i.e are sugar free?</description>
        <option>
            <description>Yes, recommended beverages have to be sugar-free</description>
            <then>
                <fact name="sugar_free">yes</fact>
            </then>
        </option>
        <option>
            <description>Yes, recommended beverages can contain sugar i.e. are NOT sugar-free</description>
            <then>
                <fact name="sugar_free">no</fact>
            </then>
        </option>
        <option>
            <description>I do not care about the sugar content of the recommended beverages.</description>
            <then>
                <fact name="sugar_free">undefined</fact>
            </then>
        </option>
    </question>

    <question>
        <description>Should the recommended beverages be carbonated?</description>
        <option>
            <description>Yes, the recommended beverages should be carbonated</description>
            <then>
                <fact name="carbonated">yes</fact>
            </then>
        </option>
        <option>
            <description>No, the recommended beverages should NOT be carbonated i.e. flat</description>
            <then>
                <fact name="carbonated">no</fact>
            </then>
        </option>
        <option>
            <description>I do not care about the carbonation of the recommended beverages</description>
            <then>
                <fact name="carbonated">undefined</fact>
            </then>
        </option>
    </question>

    <question>
        <description>Are you willing to consume energy drinks</description>
        <option>
            <description>Yes, the recommended beverages can be energy drinks</description>
            <then>
                <fact name="energy_drink">yes</fact>
            </then>
        </option>
        <option>
            <description>No, I do not consume energy drinks</description>
            <then>
                <fact name="energy_drink">no</fact>
            </then>
        </option>
        <option>
            <description>I do not care.</description>
            <then>
                <fact name="energy_drink">undefined</fact>
            </then>
        </option>
    </question>

    <question>
        <description>Are you willing to consume beverages which contain caffeine or caffeine-like alternatives</description>
        <option>
            <description>Yes, recommended beverages should contain caffeine</description>
            <then>
                <fact name="has_caffeine">yes</fact>
            </then>
        </option>
        <option>
            <description>No, recommended beverages should NOT contain caffeine</description>
            <then>
                <fact name="has_caffeine">no</fact>
            </then>
        </option>
        <option>
            <description>I do not care about the caffeine contents of the recommended beverages</description>
            <then>
                <fact name="has_caffeine">undefined</fact>
            </then>
        </option>
    </question>

    <question>
        <description>
            Do you prefer single-use smaller containers or multi-use larger containers e.g. 6 cans of coca-cola vs a 2L bottle of coca-cola
        </description>
        <option>
            <description>I prefer single use, smaller containers.</description>
            <then>
                <fact name="package_size">small</fact>
            </then>
        </option>
        <option>
            <description>I prefer multi-use, larger containers.</description>
            <then>
                <fact name="package_size">large</fact>
            </then>
        </option>
        <option>
            <description>I do not care.</description>
            <then>
                <fact name="package_size">undefined</fact>
            </then>
        </option>
    </question>

    <question>
        <description>
            Do you consume a wide variety of drinks on a daily/weekly basis or do you consume only a few drinks you are loyal to?
        </description>
        <option>
            <description>I consume a wide variety of drinks</description>
            <then>
                <fact name="diversity">yes</fact>
            </then>
        </option>
        <option>
            <description>I am loyal to a few products</description>
            <then>
                <fact name="diversity">no</fact>
            </then>
        </option>
        <option>
            <description>I have no such preference</description>
            <then>
                <fact name="diversity">undefined</fact>
            </then>
        </option>
    </question>

    <question>
        <description>In terms of soft drinks, how much do you consume per week?</description>
        <option>
            <description>Less than 2.5L per week</description>
            <then>
                <fact name="weekly_usage">light</fact>
            </then>
        </option>
        <option>
            <description>Between 2.5L and 7L per week</description>
            <then>
                <fact name="weekly_usage">moderate</fact>
            </then>
        </option>
        <option>
            <description>More than 7L per week</description>
            <then>
                <fact name="weekly_usage">heavy</fact>
            </then>
        </option>
    </question>

    <question>
        <description>What is your daily calorie intake</description>
        <option>
            <description>Less than 2000 kCal</description>
            <then>
                <fact name="diet">lt_2000</fact>
            </then>
        </option>
        <option>
            <description>Around 2000 kCal</description>
            <then>
                <fact name="diet">2000</fact>
            </then>
        </option>
        <option>
            <description>Around 2500 kCal</description>
            <then>
                <fact name="diet">2500</fact>
            </then>
        </option>
        <option>
            <description>More than 2500 kCal</description>
            <then>
                <fact name="diet">gt_2500</fact>
            </then>
        </option>
        <option>
            <description>I have no caloric restrictions on my diet</description>
            <then>
                <fact name="diet">undefined</fact>
            </then>
        </option>
    </question>
</knowledge>